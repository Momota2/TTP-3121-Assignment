#include <stdio.h>
#include <string.h>

int main()
{
	FILE *fp;
	char returnData[64];
	const char s[2] = " ";
	const char key[] = "1234567890.";
	char *token;
	char *pch;
	int i = 0;
	int j = 0;

	fp = popen("/sbin/ifconfig eth0", "r");

	while (fgets(returnData, 64, fp) != NULL)
	{
		if (i == 1)
		{
			token = strtok(returnData, s);
			while (token != NULL)
			{
				if (j == 1)
				{
					pch = strpbrk (token, key);
					printf("The IP address is of this machine is ");
					while (pch != NULL)
					{
						printf("%c", *pch);
						pch = strpbrk (pch + 1,key);
					}
					printf("\n");
				}

				token = strtok(NULL, s);
				j = j + 1;
			}
		}

		i = i+1;		
	}		
	pclose(fp);
}
